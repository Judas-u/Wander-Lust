<% layout('/layouts/boilerplate') %>

<div class="row mt-1">
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body"> <br>
            <p class="card-text">
                - <%= listing.description %> <br>
                - &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                - <%= listing.location %> <br>
                - <%= listing.country %>
            </p>
        </div>
    </div>

    <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 p-3">Edit</a>
        <br><br>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-danger offset-5 p-3">Delete</button>
        </form>
    </div>

    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <!-- Rating Range -->
            <div class="mb-4">
                <label for="rating" class="form-label">Rating: </label>
                <input
                    type="range"
                    class="form-control"
                    min="1"
                    max="5"
                    value="3"
                    id="rating"
                    name="review[rating]"
                    required
                >
                <div class="invalid-feedback">Please provide a rating between 1 and 5.</div>
            </div>

            <!-- Comment -->
            <div class="mb-4">
                <label for="comment" class="form-label">Comment</label>
                <textarea
                    name="review[comment]"
                    id="comment"
                    cols="30"
                    rows="4"
                    class="form-control"
                    required
                ></textarea>
                <div class="invalid-feedback">Please write a comment.</div>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>
        <hr>

        <h4>All Reviews</h4>
        <% for(review of listing.reviews) {%>
            <li><%= review.comment %></li>
        <% } %>

    </div>
</div>


