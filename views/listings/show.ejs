<% layout('/layouts/boilerplate') %>

<div class="row mt-1">
    <div class="col-8 offset-3">
        <h3><%= listing.title %></h3>
    </div>

    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img " alt="listing_image">
        <div class="card-body"> 
            <p class="card-text">
                <i> Owned by <%= listing.owner?.username  %></i>
            </p>
            <p class="card-text">
                
            <p> - <%= listing.description %></p>
            <p> - &#8377; <%= listing.price.toLocaleString("en-IN") %> </p> 
            <p> - <%= listing.location %> </p>
            <p> - <%= listing.country %> </p>
        </div>
    </div>
    <!-- Errors -->
   <% if(currUser && listing.owner && currUser._id.equals(listing.owner._id)){ %>
  <div class="btns">
    <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3 p-3">Edit</a>
    <br><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
      <button class="btn btn-danger offset-5 p-3">Delete</button>
    </form>
  </div>
<% } %>


    <div class="col-8 offset-3">
        <hr>
        <h4>Leave a Review</h4>

        <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
            <!-- Rating Range -->
            <div class="mb-4">
                <label for="rating" class="form-label">Rating: </label>
                <input
                    type="range"
                    class="form-control"
                    min="1"
                    max="5"
                    value="3"
                    id="rating"
                    name="review[rating]"
                    required
                >
                <div class="invalid-feedback">Please provide a rating between 1 and 5.</div>
            </div>

            <!-- Comment -->
            <div class="mb-4">
                <label for="comment" class="form-label">Comment</label>
                <textarea
                    name="review[comment]"
                    id="comment"
                    cols="30"
                    rows="4"
                    class="form-control"
                    required
                ></textarea>
                <div class="invalid-feedback">Please write a comment.</div>
            </div>

            <!-- Submit -->
            <button type="submit" class="btn btn-primary">Submit Review</button>
        </form>

        <hr>

        <h4>All Reviews</h4>
        <div class="row">
            <% for(review of listing.reviews) {%>
                <div class="card col-5 ms-2 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Jane Doe</h5>
                        <p class="card-text"><%= review.comment %></p>
                        <p class="card-text"><%= review.rating  %> Stars</p>
                    </div>
                    <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                        <button class="btn btn-sm btn-dark ">Delete</button>
                    </form>
                </div>
            <% } %>
        </div>
         
    </div>
</div>


